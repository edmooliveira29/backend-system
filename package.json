{
  "name": "api-backend",
  "version": "1.0.0",
  "scripts": {
    "test:unit": "jest --coverage --detectOpenHandles",
    "test:unit:dev": "jest --watchAll --coverage",
    "lint": "eslint 'src/**/*.ts' --fix && echo 'Linting complete with success!'",
    "prepare": "husky install",
    "build": "rimraf build && tsc",
    "start": "NODE_ENV=deployment sudo systemctl restart mongod && nodemon ./src/main/server.ts",
    "start-test": "NODE_ENV=deployment && nodemon ./src/main/server.ts",
    "start-production": "git pull && pm2 stop api-backend && npm run build && sudo systemctl restart mongod && pm2 start ./build/main/server.js --name=api-backend --watch",
    "update-packages": "npx npm-check-updates --color --interactive &&  npm cache clean --force && rm -Rf node_modules/ && npm install && npx npm-check"
  },
  "author": "Edmo",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "morgan-body": "^2.6.9",
    "nodemon": "^3.0.1"
  }
}
