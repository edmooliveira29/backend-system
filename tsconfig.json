{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "es6"
    ],
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "*.spec.ts",
    "*.test.ts"
  ]
}