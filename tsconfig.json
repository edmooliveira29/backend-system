{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "es2020",                    
    "lib": ["es6"],                     
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}